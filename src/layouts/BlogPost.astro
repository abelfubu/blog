---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>;

const {
  data: { title, description, date, coverImage, imageShoutout },
  body,
} = Astro.props;

const jsonLd = { 
  "@context": "http://schema.org/",
  "@type": "Article",
  "author": {
    "@type": "Person",
    "name": "Abel de la Fuente"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Abelfubu",
    "logo": {
      "@type": "ImageObject",
      "url": "https://abelfubu.dev/images/abelfubu-round.svg"
    }
  },
  "headline": title,
  "image": coverImage,
  "datePublished": date,
  "dateModified": date,
}

const utterances = `
  <script
    is:inline
    src="https://utteranc.es/client.js"
    repo="abelfubu/blog"
    issue-term="pathname"
    theme="dark-blue"
    crossorigin="anonymous"
    async
  >
  </script>
`
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />

    <style>
      .post__image {
        max-height: 40vh;
        border-radius: 0.5rem;
      }
    </style>

  <script  set:html={JSON.stringify(jsonLd)} is:inline type="application/ld+json">
  </script>

  </head>

  <body>
    <Header />
    <main>
      <article class="pb-8">
        <h1 class="py-0">{title}</h1>

        <!-- POST INFO -->
        <div class="flex gap-3 py-4 items-center">
          <img
            class="w-8 h-8 rounded-full"
            src="https://avatars.githubusercontent.com/u/65258220?v=4"
            height="32"
            width="32"
            alt="Abel de la Fuente"
          />
          <div>
            <small class="block mb-[-8px]">Abel de la Fuente </small>
            <small>
              <span
                >{Math.round((body?.length || 0) / 100 / 4)} min read -
              </span>
              <span class="text-[var(--primary)] py-0">
                <FormattedDate date={date} />
              </span>
            </small>
          </div>
        </div>

        <div class="hero-image">
          {
            coverImage && (
              <img
                width={620}
                height={360}
                src={coverImage}
                alt={title}
                class="post__image"
              />
            )
          }
        </div>

        <small set:html={imageShoutout} class="text-xs block" />

        <!-- CONTENT -->
        <slot />

        <section class="pb-16 min-h-48" set:html={utterances}></section>
      </article>
    </main>
    <Footer />
  </body>
</html>

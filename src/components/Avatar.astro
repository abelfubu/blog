---
const { size } = Astro.props;

type Props = { size: 'small' | 'medium' | 'large' };

const sizeMap = {
  small: ['w-8', 'h-8'],
  medium: ['w-16', 'h-16'],
  large: ['w-32', 'h-32'],
};
---

<img
  class:list={['rounded-full', sizeMap[size]]}
  src="https://avatars.githubusercontent.com/u/65258220?v=4"
  alt="Abel de la Fuente"
/>
